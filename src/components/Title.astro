---
export interface Props {
  prefix: string
  sufix: string
}
const {
  prefix,
  sufix
} = Astro.props

---
<a href="/">
  <h1 class="font-black uppercase text-6xl md:text-8grid grid-cols-2 md:grid-cols-3 gap-3xl text-center py-8">
    {prefix}
    <span class="block text-[24px] md:text-[40px]">{sufix}</span>
  </h1>
</a>